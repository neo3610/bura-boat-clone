{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@features/*": ["features/*"],
      "@assets/*": ["assets/*"],
      "@enums/*": ["enums/*"],
      "@store/*": ["store/*"],
      "@pages": ["pages"],
    }
  },
  "include": [
    "vite.config.ts"
  ]
}